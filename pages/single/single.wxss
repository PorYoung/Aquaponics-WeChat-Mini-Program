/* pages/single/single.wxss */
@import '../display.wxss';

.container {
  /* height: 100vh; */
  height: calc(100vh + 300rpx);
  position: relative;
  /* background: linear-gradient(45deg, rgb(253, 219, 146) 0%, rgb(209, 253, 255) 100%); */
}

.container.when-topbox-spread {
  /* height: 100vh; */
  overflow: hidden;
  height: 100%;
}

.topbox {
  /* background: #FE5858; */
  height: 300rpx;
  background: linear-gradient(to bottom, #39b54a 0, #39b54a 160rpx, #f6f7f9 160rpx, #f6f7f9);
  position: relative;
  transition: height 0.3s;
  z-index: 3;
}

.topbox-spread {
  /* height: calc(100vh - 91rpx); */
  height: 100vh;
}

.topbox-spread .topbox-collapse {
  opacity: 1;
}

.topbox-collapse {
  position: absolute;
  left: 50%;
  bottom: 15rpx;
  font-size: 32rpx;
  opacity: 0;
  transition: opacity 0.5s;
}

/* device bar style */

.device-bar {
  margin: 0 16rpx;
  height: 100%;
  background: #fff;
  border-radius: 8rpx;
  box-shadow: 0 0 5px rgba(0, 0, 0, 0.3);
}

.device-bar .goods-list-li {
  background: transparent;
  border: none;
}

.device-bar-detail {
  height: 0;
  overflow: hidden;
  padding: 0;
}

.device-bar-detail .list-li {
  justify-content: initial;
}

.device-bar-detail-spread {
  height: auto;
  margin: 16rpx 0;
}

.device-description {
  padding: 8rpx;
  background: #eee;
  margin: 0 32rpx;
  border-radius: 8rpx;
}

.s-notice {
  padding: 15rpx 0 0;
}

.s-notice-hidden {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.device-bar-spread {
  height: 98%;
  transition: height 0.3s;
  overflow: auto;
}

/* switch bar style */

.topbar {
  display: flex;
  justify-content: space-around;
  align-items: center;
  font-size: 36rpx;
  height: 90rpx;
  box-shadow: 0 0 3px rgba(0, 0, 0, 0.1);
}

.topbar .topbar-btn {
  padding: 16rpx 48rpx;
}

.topbar-btn.active {
  border-bottom: 5rpx solid #dd514c;
  /* border-bottom: 5rpx solid #fff; */
  color: #f37b1d;
  /* color: #fff; */
  border-radius: 3rpx;
}

/* content and comment scroll box */

.content-box, .comment-box, .data-box {
  display: flex;
  margin-bottom: 91rpx;
  transition: left 0.3s;
}

.left-menu, .right-list, .comment-scroll {
  height: calc(100vh - 180rpx);
}

/* content box */

.content-box {
  position: relative;
  left: 0;
  flex-direction: column;
}

/* data box */

.data-box {
  position: absolute;
  width: 100%;
  left: 100%;
  top: 390rpx;
  flex-direction: column;
}

.data-box .section {
  display: flex;
  justify-content: space-around;
  align-items: center;
  padding: 32rpx;
  /* box-shadow: 0 0 1rpx #c5aaee; */
  font-size: 32rpx;
}

.dataTable .tips {
  display: flex;
  justify-content: center;
  align-items: center;
}

.dataTable .tips .dataIndexStatus {
  margin: 0 12rpx;
}

/* comment box */

.comment-box {
  position: absolute;
  width: 100%;
  left: 200%;
  top: 390rpx;
}

.icon-nav-box .icon-nav {
  justify-content: space-around;
  background: none;
}

/* index */

.data-index {
  /* height: 100rpx; */
  margin: 12rpx 16rpx;
  font-size: 48rpx;
}

.data-index-name {
  height: 48rpx;
  display: flex;
  align-items: center;
}

.data-index-info {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin: 8rpx 16rpx;
  border-radius: 6rpx;
  border: 1rpx solid rgba(243, 237, 170, 0.85);
  background: rgba(255, 255, 255, 0.9);
  box-sizing: border-box;
  color: rgba(0, 0, 0, 0.6);
  font-weight: bold;
  padding: 8rpx 16rpx 4rpx;
}

.data-index-progress {
  display: flex;
  width: 100%;
  height: 16rpx;
  border-radius: 6rpx;
  font-size: 16rpx;
  margin-top: 8rpx;
}

.data-index-progress>text {
  border-radius: 8rpx;
  height: 8rpx;
  line-height: 8rpx;
}

.data-index-progress-text {
  height: 16rpx;
  padding: 0 1rpx;
}

.boldText {
  font-weight: bold;
  padding: 3rpx;
}

.dataIndexStatus {
  height: 30rpx;
  width: 30rpx;
  border-radius: 50%;
}
